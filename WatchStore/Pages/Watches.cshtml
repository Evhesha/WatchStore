@page
@using Data;
@model WatchStore.Pages.WatchesModel
@inject AppDBContent DbContext

@{
    DBObjects.Initial(DbContext); // Инициализируем базу данных
    var watches = DbContext.Watch.ToList(); // Получаем список часов из базы данных
}

<div class="row">
    @foreach (var watch in watches)
    {
        <div class="col-sm-4 mb-4">
            <div class="card h-100">
                <img src="@watch.Img" class="card-img-top" alt="@watch.Name">
                <div class="card-body">
                    <h5 class="card-title">@watch.Name</h5>
                    <p class="card-text">@watch.ShortDescription</p> <!-- Добавил короткое описание -->
                    <a href="#" class="btn btn-primary">Подробнее</a> <!-- Изменил текст кнопки -->
                </div>
            </div>
        </div>
    }
</div>
